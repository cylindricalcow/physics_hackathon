<CustLabel@Label>:
    color: (0, 0, 0, 1)

#Login Screen to create character
<LoginScreen>:
    #Set Background
    RelativeLayout:
        pos: 0,0
        canvas.before:
            BorderImage:
                source: 'Images/Backgrounds/Character Background.png'
                pos: self.x,self.y
                size: self.width, self.height
    RelativeLayout:
    #Set Title
        Label:
            text: "Welcome to your Dreamscape:"
            pos: (root.width*.25, root.height*.45)
            size_hint: .5,.8
        Label:
            text: "Find HOT LOCAL SINGLES in your area"
            pos: (root.width*.25, root.height*.35)
            size_hint: .5,.8
    #Build character
    GridLayout:
        orientation: "vertical"
        rows: 5
        cols: 3
        pos: (root.width*.2, root.height*.45)
        size_hint: .6,.225
        Label:
            text: 'Name:'
        TextInput:
            id: full_name
            size_hint: 1.6,.1
        Button:
            text: "submit"
            on_press: 
                root.save_name()
        
        Label:
            text: 'Class and Race:'
        Spinner:
            id: class_name
            size_hint: 1.6,.1
            text: '---'
            values: ["---", "Dwarf Cleric", "Elf Wizard", "Halfling Rogue", "Human Fighter"]
            on_text: root.save_class(class_name.text)
        Label:


        Label:
            text: 'Health Points:'
        TextInput:
            id: hp_name
            size_hint: 1.6,.1
        Button:
            text: "submit"
            on_press: 
                root.save_attributes(0)

        Label:
            text: 'Armor Class:'
        TextInput:
            id: ac_name
            size_hint: 1.6,.1
        Button:
            text: "submit"
            on_press: 
                root.save_attributes(1)

        Label:
            text: 'Speed:'
        TextInput:
            id: sp_name
            size_hint: 1.6,.1  
        Button:
            text: "submit"
            on_press: 
                root.save_attributes(2)

    GridLayout:
        orientation: "vertical"
        rows: 7
        cols: 4
        pos: (root.width*.2, root.height*.15)
        size_hint: .6,.3
        Label:
        Label:
            text: 'Points'
            size_hint: 1.2,.1
        Label:
            text: 'Mod +/-'
            size_hint: .4,.1
        Label:

        Label:
            text: 'Strength:'
        TextInput:
            id: str_name
            size_hint: 1.2,.1
        TextInput:
            id: str_mod_name
            size_hint: .4,.1
        Button:
            text: "submit"
            on_press: 
                root.save_stats(0)


        Label:
            text: 'Dexterity:'
        TextInput:
            id: dex_name
            size_hint: 1.2,.1  
        TextInput:
            id: dex_mod_name
            size_hint: .4,.1   
        Button:
            text: "submit"
            on_press: 
                root.save_stats(1)
        
        Label:
            text: 'Constitution:'
        TextInput:
            id: con_name
            size_hint: 1.2,.1
        TextInput:
            id: con_mod_name
            size_hint: .4,.1
        Button:
            text: "submit"
            on_press: 
                root.save_stats(2)
        
        Label:
            text: 'Wisdom:'
        TextInput:
            id: wis_name
            size_hint: 1.2,.1
        TextInput:
            id: wis_mod_name
            size_hint: .4,.1
        Button:
            text: "submit"
            on_press: 
                root.save_stats(3)
        
        Label:
            text: 'Intelligence:'
        TextInput:
            id: int_name
            size_hint: 1.2,.1
        TextInput:
            id: int_mod_name
            size_hint: .4,.1
        Button:
            text: "submit"
            on_press: 
                root.save_stats(4)
        
        Label:
            text: 'Charisma:'
        TextInput:
            id: cha_name
            size_hint: 1.2,.1
        TextInput:
            id: cha_mod_name
            size_hint: .4,.1
        Button:
            text: "submit"
            on_press: 
                root.save_stats(5)

    #Buttons to change windows from Login
    RelativeLayout:
        Button:
            id: statement
            text: 'Character Page'
            pos: (root.width*0.8, root.y)
            size_hint: .2,.1
            on_press:
                root.manager.get_screen('main').store_description()
                root.manager.get_screen('main').store_attributes()
                root.manager.current = 'main'
                root.manager.transition.direction = 'left'

#Character stats and information screen
<MainScreen>:
    #Images for the character 
    RelativeLayout:
        pos: 0,0
        canvas.before:
            BorderImage:
                source: 'Images/Backgrounds/Church.png'
                pos: self.x,self.y
                size: self.width, self.height
        Image:
            id: character_image
            pos: (root.width*.4, root.height*.45)
            size_hint: .2, .6
    #Character infromation
    RelativeLayout:
        Label:
            id: description
            pos: (root.width*.1, root.height*.5)
            size_hint: .8,.05
        Label:
            text: "Information about character"
            pos: (root.width*.1, root.height*.25)
            size_hint: .8,.05
    #Important Character attributes
    RelativeLayout:
        Label:
            id: attributes0
            pos: (root.width*(.4-.2), root.height*.44)
            size_hint: .2,.1
        Label:
            id: attributes1
            pos: (root.width*.4, root.height*.44)
            size_hint: .2,.1
        Label:
            id: attributes2
            pos: (root.width*(.4+0.2), root.height*.44)
            size_hint: .2,.1
    #Buttons to check the character stats
    RelativeLayout:
        orientation: 'horizontal'
        pos: (root.width*.4, root.height*.36)
        size_hint: .2,.1
        # When clicked the popup opens
        Button:
            text: 'Stats'
            on_press: 
                root.open_popup()
    #Buttons to change windows from the character page
    RelativeLayout:
        Button:
            text: 'Inventory'
            pos: (root.width*0.8, root.y)
            size_hint: .2,.1
            on_press: 
                root.manager.current = 'second'
                root.manager.transition.direction = 'left'
        Button:
            text: 'Map'
            pos: (root.x, root.y)
            size_hint: .2,.1
            on_press: 
                root.manager.current = 'third'
                root.manager.transition.direction = 'right'

#Equipped Weapons and Armor screen               
<SecondScreen>:
    #Images for the equipment background 
    RelativeLayout:
        pos: 0,0
        canvas.before:
            BorderImage:
                source: 'Images/Backgrounds/Blacksmith Shop.png'
                pos: self.x,self.y
                size: self.width, self.height
    #Character weapons and armor
    RelativeLayout:
        Spinner:
            text: 'Weapons'
            pos: (root.width*.25,root.height*.8)
            size_hint: 0.5,.1
            values: ["Weapons","Weapon 1", "Weapon 2", "Weapon 3"]
        Spinner:
            text: 'Armor'
            pos: (root.width*.25,root.height*.4)
            size_hint: 0.5,.1
            values: ["Armor", "Armor 1", "Armor 2", "Armor 3"]
    #Button to move back to the character screen from the equipment screen
    RelativeLayout:
        Button:
            text: 'Character Stats'
            pos: (root.x, root.y)
            size_hint: .2,.1
            on_press: 
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'

#Character map screen
<ThirdScreen>:
    #Images for the map background
    RelativeLayout:
        pos: 0,0
        canvas.before:
            BorderImage:
                source: 'Images/Backgrounds/Map Background.png'
                pos: self.x,self.y
                size: self.width, self.height
    #Button to move back to te character screen from the map screen
        Button:
            text: 'Character Stats'
            pos: (root.width*0.8, root.y)
            size_hint: .2,.1
            on_press: 
                root.manager.current = 'main'
                root.manager.transition.direction = 'left'
    #Fun thing for painting############################################################################################
    RelativeLayout:
        Painter:
            pos: (root.width*0.8, root.height/2)
    #Actions that can be taken by the character on the map
    GridLayout:
        orientation: "horizontal"
        rows:4
        cols:1
        size_hint: .5,.4
        Button:
            text: "Action"
            on_press: root.open_popup(0)
        Button:
            text: "Bonus"
            on_press: root.open_popup(1)
        Button:
            text: "Move"
            on_press: root.open_popup(2)
        Button:
            text: "Inventory"
            on_press: root.open_popup(3)

<StatsPopup>:
    title: "Stats"
    size_hint: .5, .5
    auto_dismiss: False
    GridLayout:
        cols: 3
        rows: 3
        pos: root.x, root.height
        Label:
            id: stats0
        Label:
            id: stats1
        Label:
            id: stats2
        Label:
            id: stats3
        Label:
            id: stats4
        Label:
            id: stats5
        Label:
            size_hint:.2,.2
        Button:
            size_hint:.2,.2
            text: "Close"
            on_press: root.dismiss()
        Label:
            size_hint:.2,.2

